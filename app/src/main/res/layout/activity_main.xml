<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


        <Button
            android:id="@+id/button_history"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:textSize="30sp"
            android:fontFamily="sans-serif"
            android:theme="@style/PrimaryButton"
            android:background="@drawable/history" />

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="0dp"
            android:orientation="horizontal"
            android:paddingTop="20dp"
            >
            <Button
                android:id="@+id/button_left"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="40dp"
                android:textSize="30sp"
                android:fontFamily="sans-serif"
                android:theme="@style/PrimaryButton"

                android:background="@drawable/left" />
            <TextView
                android:id="@+id/textview_quarter"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:textSize="32dip"
                android:fontFamily="sans-serif-black"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="5dp"
                android:text="First Quarter"/>
            <Button
                android:id="@+id/button_right"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="5dp"
                android:textSize="30sp"
                android:fontFamily="sans-serif"
                android:theme="@style/PrimaryButton"
                android:layout_gravity="right"
                android:background="@drawable/right" />
        </LinearLayout>

    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/favorites_grid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rowCount="6"
        android:columnCount="3"
        android:layout_gravity="center_horizontal"
        >

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view1"
            android:layout_row="0"
            android:layout_column="0"

            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center"
            android:layout_width="140dp"
            android:layout_height="90dp"
            android:layout_below="@id/rdogrp"
            card_view:cardCornerRadius="6dp">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"

                >
                <Button
                    android:id="@+id/button_miss"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="Miss"
                    android:textSize="30sp"
                    android:fontFamily="sans-serif"
                    android:theme="@style/PrimaryButton"
                    android:background="@drawable/radius"
                    />

                <TextView
                    android:id="@+id/textview_misses"
                    android:padding="5dp"

                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="35dp"
                    android:fontFamily="sans-serif-black"
                    android:text="0"
                    android:textSize="30sp"
                    />
            </RelativeLayout>


        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view2"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_marginTop="20dp"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp"
            android:layout_gravity="center"
            android:layout_width="140dp"
            android:layout_height="90dp"
            android:layout_below="@id/rdogrp"
            card_view:cardCornerRadius="6dp">



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"

                >
                <Button
                    android:id="@+id/button_free"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="Free"

                    android:textSize="30sp"
                    android:fontFamily="sans-serif"
                    android:theme="@style/PrimaryButton"
                    android:background="@drawable/radius"
                    />

                <TextView
                    android:id="@+id/textview_free"
                    android:padding="5dp"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="35dp"
                    android:fontFamily="sans-serif-black"
                    android:text="0"
                    android:textSize="30sp"
                    />
            </RelativeLayout>


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view3"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center"
            android:layout_width="140dp"
            android:layout_height="90dp"
            android:layout_below="@id/rdogrp"
            android:layout_marginBottom="10dp"
            card_view:cardCornerRadius="6dp">



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"

                >
                <Button
                    android:id="@+id/button_twopoints"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="2pts"

                    android:textSize="30sp"
                    android:fontFamily="sans-serif"
                    android:theme="@style/PrimaryButton"
                    android:background="@drawable/radius"
                    />

                <TextView
                    android:id="@+id/textview_twopoints"
                    android:padding="5dp"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="35dp"
                    android:fontFamily="sans-serif-black"
                    android:text="0"
                    android:textSize="30sp"
                    />
            </RelativeLayout>


        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view4"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_marginTop="20dp"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center"
            android:layout_width="140dp"
            android:layout_height="90dp"
            android:layout_below="@id/rdogrp"
            card_view:cardCornerRadius="6dp">



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"

                >
                <Button
                    android:id="@+id/button_threepoints"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="3pts"

                    android:textSize="30sp"
                    android:fontFamily="sans-serif"
                    android:theme="@style/PrimaryButton"
                    android:background="@drawable/radius"
                    />

                <TextView
                    android:id="@+id/textview_threepoints"
                    android:padding="5dp"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="35dp"
                    android:fontFamily="sans-serif-black"
                    android:text="0"
                    android:textSize="30sp"
                    />
            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </GridLayout>

    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/favorites_grid2"
        android:layout_marginTop="0dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rowCount="6"
        android:columnCount="3"
        android:layout_gravity="center_horizontal"
        >

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view12"
            android:layout_row="0"
            android:layout_column="0"

            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center"
            android:layout_width="140dp"
            android:layout_height="90dp"
            android:layout_below="@id/rdogrp"
            card_view:cardCornerRadius="6dp">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"

                >
                <Button
                    android:id="@+id/button_miss2"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="Miss"
                    android:textSize="30sp"
                    android:fontFamily="sans-serif"
                    android:theme="@style/SecondaryButton"
                    android:background="@drawable/radius2"
                    />

                <TextView
                    android:id="@+id/textview_misses2"
                    android:padding="5dp"

                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="35dp"
                    android:fontFamily="sans-serif-black"
                    android:text="0"
                    android:textSize="30sp"
                    />
            </RelativeLayout>


        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view22"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_marginTop="20dp"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp"
            android:layout_gravity="center"
            android:layout_width="140dp"
            android:layout_height="90dp"
            android:layout_below="@id/rdogrp"
            card_view:cardCornerRadius="6dp">



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"

                >
                <Button
                    android:id="@+id/button_free2"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="Free"

                    android:textSize="30sp"
                    android:fontFamily="sans-serif"
                    android:theme="@style/PrimaryButton"
                    android:background="@drawable/radius2"
                    />

                <TextView
                    android:id="@+id/textview_free2"
                    android:padding="5dp"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="35dp"
                    android:fontFamily="sans-serif-black"
                    android:text="0"
                    android:textSize="30sp"
                    />
            </RelativeLayout>


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view32"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center"
            android:layout_width="140dp"
            android:layout_height="90dp"
            android:layout_below="@id/rdogrp"
            android:layout_marginBottom="10dp"
            card_view:cardCornerRadius="6dp">



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"

                >
                <Button
                    android:id="@+id/button_twopoints2"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="2pts"

                    android:textSize="30sp"
                    android:fontFamily="sans-serif"
                    android:theme="@style/PrimaryButton"
                    android:background="@drawable/radius2"
                    />

                <TextView
                    android:id="@+id/textview_twopoints2"
                    android:padding="5dp"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="35dp"
                    android:fontFamily="sans-serif-black"
                    android:text="0"
                    android:textSize="30sp"
                    />
            </RelativeLayout>


        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view42"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_marginTop="20dp"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center"
            android:layout_width="140dp"
            android:layout_height="90dp"
            android:layout_below="@id/rdogrp"
            card_view:cardCornerRadius="6dp">



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"

                >
                <Button
                    android:id="@+id/button_threepoints2"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="3pts"

                    android:textSize="30sp"
                    android:fontFamily="sans-serif"
                    android:theme="@style/PrimaryButton"
                    android:background="@drawable/radius2"
                    />

                <TextView
                    android:id="@+id/textview_threepoints2"
                    android:padding="5dp"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="35dp"
                    android:fontFamily="sans-serif-black"
                    android:text="0"
                    android:textSize="30sp"
                    />
            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </GridLayout>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"

        android:layout_height="300dp"

        android:orientation="vertical">


        <Button
            android:id="@+id/button_undo"
            android:layout_width="340dp"
            android:layout_height="50dp"
            android:layout_marginStart="30dp"
            android:text="Undo action"
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            android:fontFamily="arial"
            android:textColor="@color/white_color"
            android:theme="@style/PrimaryButton"
            android:background="@drawable/noncurve"
            />
    </LinearLayout>>


</LinearLayout>